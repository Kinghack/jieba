      function getChecked(buttonName) {
        var btnList = document.getElementsByName(buttonName);
        var checkedList = new Array();
        for (var i = 0;i<btnList.length;i++) {
            if (btnList[i].checked === true) {
                checkedList.push(btnList[i]);
            }
        }
        return checkedList;
      }
